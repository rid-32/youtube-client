{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "paths": {
      "images/*": ["./public/assets/images/*"],
      "*": ["./src/*"]
    },
    "typeRoots": ["node_modules/@types", "./src/@types/**/*"]
  }
}
